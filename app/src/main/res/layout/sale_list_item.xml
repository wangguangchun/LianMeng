<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/one_height_item">
    <ImageView
        android:layout_width="@dimen/two_height_item"
        android:layout_height="@dimen/two_height_item"
        android:layout_margin="@dimen/two_margin_item"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/items_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/five_height_item"
            android:text="C++基础大全"
            android:textSize="@dimen/big_txt_size"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/two_margin_item"
            android:textColor="#232222"/>
        <TextView
            android:id="@+id/items_classification"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/five_height_item"
            android:text="分类/书籍"
            android:textSize="@dimen/medium_txt_size"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/items_master"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/five_height_item"
            android:text="联系人:轻疯"
            android:textSize="@dimen/medium_txt_size"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/two_margin_item"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/items_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/five_height_item"
            android:text="联系电话:156****2651"
            android:textSize="@dimen/medium_txt_size"
            android:layout_marginRight="@dimen/two_margin_item"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/two_margin_item"/>
        <CheckBox
            android:layout_width="@dimen/four_height_item"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/items_phonenumber"
            android:background="@drawable/sale_list_collection_star_sel"
            android:button="@null"
            android:id="@+id/button"
            android:layout_above="@+id/items_phonenumber"/>
    </RelativeLayout>
</LinearLayout>